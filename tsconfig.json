{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "allowJs": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/*"],
            "@admin/*": ["resources/ts/admin/*"],
            "@admin/shared/*": ["resources/ts/admin/shared/*"],
            "@site/*": ["resources/ts/site/*"]
        },
        "types": ["vite/client"],
        "typeRoots": ["./node_modules/@types", "./resources/ts/types"]
    },
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/**/*.d.ts",
        "resources/ts/**/*.tsx",
        "resources/ts/**/*.vue",
        "resources/ts/**/*.js"
    ],
    "exclude": ["node_modules", "dist"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
